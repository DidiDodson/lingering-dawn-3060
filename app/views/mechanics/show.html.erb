<h1><%= @mechanic.name%></h1>
<p>Years of Experience:<%= @mechanic.years_of_experience %></p>
<p>Rides:<% @mechanic.open_rides.each do |ride| %>
          <%= ride.name %>,
          <% end %></p>

<h4>Add a Ride to Workload:</h4>

<%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, local: true do |f| %>
  <%= f.number_field :ride_id %>
  <%= f.submit "Submit" %>
<% end %>
